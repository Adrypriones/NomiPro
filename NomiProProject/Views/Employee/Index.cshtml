@using NomiProProject.Shared.Enums

@{@model NomiProProject.Models.Empleado


ViewBag.Title = "Index";
}

<!-- Content page-->

    <body>
        <section>
            <div class="container-fluid">
                <div class="page-header">
                    <h1 class="text-titles"><i class="zmdi zmdi-account zmdi-hc-fw"></i> Empleado <small>NomiPro</small></h1>
                </div>
            </div>

            <div class="container-fluid">
                <ul class="breadcrumb breadcrumb-tabs">
                    <li>
                        <a href="@Url.Action("NewEmployee", "Employee")" class="btn btn-info" style="color:#000000">
                            <i class="zmdi zmdi-plus"></i> &nbsp; NUEVO EMPLEADO
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ListEmployee", "Employee")" class="btn btn-success" style="color:#000000">
                            <i class="zmdi zmdi-format-list-bulleted"></i> &nbsp; LISTA DE EMPLEADOS
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("SearchEmployee", "Employee")" class="btn btn-primary" style="color:#000000">
                            <i class="zmdi zmdi-search"></i> &nbsp; BUSCAR EMPLEADO
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Position", "Position")" class="btn btn-danger" style="color:#000000">
                            <i class="zmdi zmdi-comment-list"></i> &nbsp; LISTA  DE CARGOS
                        </a>
                    </li>


                </ul>
            </div>

            <div class="container-fluid">
                <div class="page-header">
                    <h1 class="text-titles">Sistema <small>Horario Empleado</small></h1>
                </div>

                <div class="panel-body" style="overflow-y:scroll; height:290px">

                    <section id="cd-timeline" class="cd-container">
                        <div class="cd-timeline-block">
                            <div class="cd-timeline-img">
                                <img src="/Content/assets/avatars/StudetMaleAvatar.png" alt="user-picture">
                            </div>
                            <div class="cd-timeline-content">
                                <h4 class="text-center text-titles">1 - Nombre (Gerente Proyecto)</h4>
                                <p class="text-center">
                                    <i class="zmdi zmdi-timer zmdi-hc-fw"></i> Comienzo: <em>6:00 AM</em> &nbsp;&nbsp;&nbsp;
                                    <i class="zmdi zmdi-time zmdi-hc-fw"></i> Fin: <em>2:00 PM</em>
                                </p>
                                <span class="cd-date"><i class="zmdi zmdi-calendar-note zmdi-hc-fw"></i>Ingreso 07/07/2016</span>
                            </div>
                        </div>
                        <div class="cd-timeline-block">
                            <div class="cd-timeline-img">
                                <img src="/Content/assets/avatars/StudetFemaleAvatar.png" alt="user-picture">
                            </div>
                            <div class="cd-timeline-content">
                                <h4 class="text-center text-titles">2 - Nombre (Programador)</h4>
                                <p class="text-center">
                                    <i class="zmdi zmdi-timer zmdi-hc-fw"></i> Comienzo: <em>2:00 PM</em> &nbsp;&nbsp;&nbsp;
                                    <i class="zmdi zmdi-time zmdi-hc-fw"></i> Fin: <em>10:00 PM</em>
                                </p>
                                <span class="cd-date"><i class="zmdi zmdi-calendar-note zmdi-hc-fw"></i> Ingraso 20/04/2012</span>
                            </div>
                        </div>
                        <div class="cd-timeline-block">
                            <div class="cd-timeline-img">
                                <img src="~/Content/assets/avatars/TeacherFemaleAvatar.png" alt="user-picture">
                            </div>
                            <div class="cd-timeline-content">
                                <h4 class="text-center text-titles">3 - Nombre (Pruebas)</h4>
                                <p class="text-center">
                                    <i class="zmdi zmdi-timer zmdi-hc-fw"></i> Comienzo: <em>2:00 PM</em> &nbsp;&nbsp;&nbsp;
                                    <i class="zmdi zmdi-time zmdi-hc-fw"></i> Fin: <em>10:00 PM</em>
                                </p>
                                <span class="cd-date"><i class="zmdi zmdi-calendar-note zmdi-hc-fw"></i> Ingreso 24/10/2018</span>
                            </div>
                        </div>
                        <div class="cd-timeline-block">
                            <div class="cd-timeline-img">
                                <img src="~/Content/assets/avatars/TeacherMaleAvatar.png" alt="user-picture">
                            </div>
                            <div class="cd-timeline-content">
                                <h4 class="text-center text-titles">4 - Nombre (Diseñador)</h4>
                                <p class="text-center">
                                    <i class="zmdi zmdi-timer zmdi-hc-fw"></i> Comienzo: <em>6:00 AM</em> &nbsp;&nbsp;&nbsp;
                                    <i class="zmdi zmdi-time zmdi-hc-fw"></i> Fin: <em>2:00 PM</em>
                                </p>
                                <span class="cd-date"><i class="zmdi zmdi-calendar-note zmdi-hc-fw"></i> Ingraso 09/03/2009</span>
                          </div>
                      </div>
                  </section>


                </div>


          </div>

        </section>

 </body>